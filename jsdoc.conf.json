{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_|node_modules|lib|worker|dist"
  },
  "opts": {
    "template": "node_modules/jsdoc-to-markdown/dist/template",
    "encoding": "utf8",
    "destination": "docs/api/",
    "recurse": true,
    "readme": "README.md"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
} 